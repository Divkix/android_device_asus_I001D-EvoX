<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Show a custom view for FOD -->
    <bool name="config_needCustomFODView">true</bool>

    <!-- Default fod pressed color -->
    <integer name="config_fod_pressed_color">1</integer>

    <!-- Switch USB controller on Asus ROG devices-->
    <bool name="config_switchUsbController">true</bool>

    <!-- Custom Charging file for ROG Phone 2 -->
    <string name="config_adaptiveChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/device/smartchg_stop_charging</string>
    <string name="config_adaptiveChargingSuspendValue" translatable="false">1</string>
    <string name="config_adaptiveChargingResumeValue" translatable="false">0</string>

    <!-- Flag indicating whether we should enable the adaptive sleep.-->
    <bool name="config_adaptive_sleep_available">true</bool>

    <!-- The default minimum refresh rate for a given device. Devices with higher refresh rates
         may want to configure this to avoid jank during refresh rate switching -->
    <integer name="config_defaultMinimumRefreshRate">60</integer>

    <!-- The default refresh rate for a given device. Change this value to set a higher default
         refresh rate. If the hardware composer on the device supports display modes with a higher
         refresh rate than the default value specified here, the framework may use those higher
         refresh rate modes if an app chooses one by setting preferredDisplayModeId or calling
         setFrameRate().
         If a non-zero value is set for config_defaultPeakRefreshRate, then
         config_defaultRefreshRate may be set to 0, in which case the value set for
         config_defaultPeakRefreshRate will act as the default frame rate. -->
    <integer name="config_defaultRefreshRate">90</integer>

    <!-- The default peak refresh rate for a given device. Change this value if you want to prevent
         the framework from using higher refresh rates, even if display modes with higher refresh
         rates are available from hardware composer. Only has an effect if the value is
         non-zero. -->
    <integer name="config_defaultPeakRefreshRate">120</integer>
</resources>